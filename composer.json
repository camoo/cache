{
	"name": "camoo/cache",
	"description": "Cache System Library",
	"homepage": "https://camoo.cm",
	"type": "camoo-plugin",
	"license": "GPL-2.0-or-later",
	"minimum-stability": "dev",
	"prefer-stable" : true,
	"authors": [
		{
			"name": "Camoo S.A.R.L",
			"email": "dev@camoo.sarl",
			"role": "Developer"
		}
	],
	"keywords" : [
		"CAMOO",
		"Cache System"
	],

	"autoload": {
		"psr-4": {
			"Camoo\\Cache\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Camoo\\Cache\\Tests\\": "tests"
		}
	},

	"require": {
		"php": ">=8.2",
		"symfony/cache": "^7.0.6",
		"psr/simple-cache": "^3.0",
		"defuse/php-encryption": "^2.4"
	},
	"suggest": {
		"phpunit/phpunit": "Allows automated tests to be run without system-wide install."
	},
	"scripts" : {
		"test": "vendor/bin/phpunit --colors=always"
	},
	"support": {
		"issues": "https://github.com/camoo/cache/issues",
		"source": "https://github.com/camoo/cache",
		"wiki": "https://github.com/camoo/cache/wiki"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5"
	}
}
